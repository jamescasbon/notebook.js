line-highlight = rgba(0, 0, 0, 0.07)
cell-padding = 50px
navbar-height = 30px


body
    background-image: url('/img/stripe.png' )

    margin: 0

#navbar
    height: navbar-height
    background-color: rgba(0, 0, 0, 0.8) 
    position: fixed
    z-index: 99
    top: 0
    left: 0
    width: 100%
    text-align: left
    vertical-align: center
    -webkit-box-shadow: rgba(0, 0, 0, 0.496094) 0 0 8px
    -moz-box-shadow: rgba(0, 0, 0, 0.496094) 0 0 8px

#logo
    margin-right: 10px
    margin-top: 5px
    font-size: 20px
    float: right
    color: #807B77
    letter-spacing: 5px
    font-family: sans-serif
    
    font-weight: bold


#notebook
    width: 760px
    padding-top: navbar-height + 20
    margin-left: auto
    margin-right: auto    
    padding-bottom: 40px
    background-color: #FFFFFF
    -webkit-box-shadow: rgba(0, 0, 0, 0.496094) 0 0 8px
    -moz-box-shadow: rgba(0, 0, 0, 0.496094) 0 0 8px


// The spawner allows the user to insert a cell.
// There is one at the top and after each cell.
#spawner
    // clear the floats sizes the notebook div correctly
    clear: both
    margin-left: cell-padding
    margin-right: cell-padding

#cells 
    list-style-type: none
    padding: 0     

#cells li 
    margin: 0

.controls 
    margin-top: 10px
    margin-bottom: 10px
    position: absolute
    margin-left: 780px
    float: right 
 
    button 
        margin: 0


.controls span
    margin 5px

.cell
    padding-left: cell-padding
    padding-right: cell-padding

    hr
        margin: 0px 80px 10px 80px
        opacity: 0.6 
    hr.input-fold
        display: none

.ace-container
    position: relative 
    height: 100px

.cell-output 
    word-wrap: break-word
    .print, .error
        font-family: "Courier New", "monospace"
        font-weight: 650
    .error     
        color: red
    
    ul
        list-style-type: disc    
    &:focus
        background-color: line-highlight
        outline: none

    -webkit-transition: background 0s ease, height 2s ease;  


.type 
    // The mode is absolute position wrt to the cell's relative position */
    position: absolute
    left: 103px
    -webkit-transform-origin: top left   
    -webkit-transform: rotate(90deg) 
    -moz-transform-origin: top left  
    -moz-transform: rotate(90deg)
    background-color: #8FA7B0
    color: white
    padding: 5px
    font-weight: bold
    font-family: sans-serif
    -webkit-box-shadow: rgba(0, 0, 0, 0.496094) 0 0 8px
    -moz-box-shadow: rgba(0, 0, 0, 0.496094) 0 0 8px
    z-index: 1
    border-radius: 5px
    margin-top: 5px
    font-size: 80%
    
a
    text-decoration: none
    &:hover
        color: white


.spawn-above, #spawner
    font-family: "Courier New", "monospace"
    font-size: 80%

    height: 5px; 
    opacity:0.2
    border-radius: 0px
    -webkit-transition: opacity 0 linear, color 0.25s linear
    text-align: center
    color: #FFF
    margin-top: 5px
    margin: bottom 5px 
    background-color: line-highlight
    
    &:focus
        opacity:1
        outline: none 
        color: #555

.marker-input, .marker-output
    position: relative
    left: -20px
    float: left
    color: #AAA
    -webkit-transition: rotate 0.25s linear
    -webkit-transform-origin: center   
    -webkit-transform: rotate(90deg) 

.marker-input.input-fold
    -webkit-transform-origin: center   
    -webkit-transform: rotate(0deg) 
    clear: both

.ace-container.input-fold
    display: none

.status-bar
    position: relative
    img
        -webkit-transition: opacity 0 linear, height 0.25s ease
        opacity: 0
    
    left: -25px

    img.active 
        opacity: 1




