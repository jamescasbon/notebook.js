line-highlight = rgba(0, 0, 0, 0.07)
cell-padding = 50px
navbar-height = 30px
notebook-width = 760px


body
    background-image: url('/img/stripe.png' )

    margin: 0


#navbar
    height: navbar-height
    background-color: rgba(0, 0, 0, 0.8) 
    position: fixed
    z-index: 99
    top: 0
    left: 0
    width: 100%
    text-align: left
    vertical-align: center
    -webkit-box-shadow: rgba(0, 0, 0, 0.496094) 0 0 8px
    -moz-box-shadow: rgba(0, 0, 0, 0.496094) 0 0 8px

pre
    font-family:  'Droid Sans Mono', sans-serif
    font-size: 12px
    margin-bottom: 18px

#logo
    margin-left: 20px
    margin-right: 20px
    float: left
    color: #908B87
    letter-spacing: 5px
    font-family:  'Anonymous Pro', sans-serif
    text-transform: uppercase 
    font-weight: bold
    text-decoration: none
    
    &:hover
         color: #C0ABA7

#menu
    position: fixed
    top: 0
    right: 0
    z-index: 100



#title 
    color: white
    font-weight: bold
    letter-spacing: 2px
    float: left

#logo, #title
    font-size: 20px
    margin-top: 5px


#notebook
    padding-top: navbar-height + 20
    margin-left: auto
    margin-right: auto    
    padding-bottom: 100px
    background-color: #FFFFFF
    -webkit-box-shadow: rgba(0, 0, 0, 0.496094) 0 0 8px
    -moz-box-shadow: rgba(0, 0, 0, 0.496094) 0 0 8px
    height: 100%

#cells 
    list-style-type: none
    padding: 0     

#cells li 
    margin: 0

.cell
    padding-left: cell-padding
    padding-right: cell-padding

    hr
        margin: 0px 80px 10px 80px
        opacity: 0.6 
    hr.input-fold
        display: none

    word-wrap: break-word

.ace-container
    position: relative 
    height: 100px



.cell-output

    .print, .error
        font-family: 'Anonymous Pro', sans-serif; 
        font-weight: 400
        line-height: 170%
        
    .error     
        color: red
        font-weight: 700
    
    ul
        list-style-type: disc    
    &:focus
        background-color: line-highlight
        outline: none

    -webkit-transition: background 0s ease, height 2s ease;  
    cursor: text


.type 
    // The mode is absolute position wrt to the cell's relative position */
    position: absolute
    left: 5px
    -webkit-transform-origin: top left   
    -webkit-transform: rotate(90deg) 
    -moz-transform-origin: top left  
    -moz-transform: rotate(90deg)
    background-color: #8FA7B0
    color: white
    padding: 5px
    font-weight: bold
    font-family: sans-serif
    -webkit-box-shadow: rgba(0, 0, 0, 0.496094) 2px 4px 8px
    -moz-box-shadow: rgba(0, 0, 0, 0.496094) 2px 4px 8px
    z-index: 1
    border-radius: 5px
    margin-top: 5px
    font-size: 80%
    cursor: pointer
    
    text-decoration: none
    &:hover
        color: white


// The spawner allows the user to insert a cell.
// There is one at the top and after each cell.
// TODO: replace with HR
.spawn-above, #spawner

    font-family: "Courier New", "monospace"
    font-size: 80%

    height: 5px; 
    opacity:1
    border-radius: 0px
    -webkit-transition: opacity 0 linear, color 0.25s linear
    text-align: center
    color: #FFF
    margin-top: 5px
    margin-bottom: 5px 
    background-color: line-highlight
    
    &:focus
        opacity:1 
        color: #555

    cursor: pointer

// Match the cell padding for the end of notebook spawner
#spawner
    // clear the floats sizes the notebook div correctly
    margin-left: cell-padding
    margin-right: cell-padding




// Fold control is the '>' in the margin that hides input
.fold-button
    position: relative
    left: -20px
    float: left
    color: #AAA
    -webkit-transform-origin: center   
    -webkit-transform: rotate(90deg) 
    -moz-transform-origin: center   
    -moz-transform: rotate(90deg) 
    cursor: pointer

// we rotate the indicator to show active fold
.fold-button.input-fold
    -webkit-transform-origin: center   
    -webkit-transform: rotate(0deg) 
    -moz-transform-origin: center   
    -moz-transform: rotate(0deg) 

// hide the input text when active
.ace-container.input-fold
    display: none

// tooltips are created by placing the tooltip attr before the element 
// and displaying when hovered
.tooltip 
    &:before 
        content:attr(tooltip)
        position: absolute
        float: left
        z-index: 10
        border-radius: 10px
        width:200px
        background:yellow
        border:1px solid black
        padding:8px
        margin:10px 0 0 10px
        display: none

    &:hover::before 
        -webkit-transition: opacity 0.5s linear
        display: block
        

// evaluate and interrupt controls are in the left margin
.status-bar
    position: relative
    float: right
    img
        cursor: pointer
        display: none

    top: -25px 
    right: -30px

    img.active 
        opacity: 1
        display: block




.list-notebook 

    &:nth-child(odd) 
        background: rgba(50,50,50,0.05)

    &:nth-child(odd):hover 
    	background: rgba(50,50,50,0.3)	
 
    &:nth-child(even) 
	    background: rgba(50,50,50,0.05)

    &:nth-child(even):hover 
        background: rgba(50,50,50,0.3)
    
    & > .right
        float: right
        margin-left: 20px
            
        & > a
            margin-left: 20px

